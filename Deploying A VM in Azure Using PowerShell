(IAAC) - Infrastructure as a code USING Terraform 
# Deploying (1)Resource group (2) Storage group (3) Static Web




provider "azurerm" {
    features {}
}

#create a resource group (1)
resource "azurerm_resource_group" "resource_group" {
    name = "rg_terraform_demo"
    location = "eastus"
}

#create a storage account (2)
resource "azurerm_storage_account" "storage_account" {
  name     = "terraformazuretoronto10"
  resource_group_name = azurerm_resource_group.resource_group.name
  location = azurerm_resource_group.resource_group.location
  account_tier = "Standard"
  account_replication_type = "LRS"
  account_kind = "StorageV2"

#hosting a static website using this storage account
  static_website  {
    index_document = "index.html"
  }
}

#add a index.html file (3)
resource "azurerm_storage_blob" "blob" {
  
  name                     = "index.html"
  storage_account_name = azurerm_storage_account.storage_account.name
  storage_container_name = "$web"
  type  = "Block"
  content_type = "text/html"
  source_content = "<h1> Boyo, this is a website deployed using terraform </h1>"
}

